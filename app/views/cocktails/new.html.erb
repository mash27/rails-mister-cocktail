<h1 class="text-center">Create a new cocktail</h1>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-sm-offset-3">
      <%= simple_form_for(@cocktail) do |c| %>
      <%= c.input :name, placeholder: "add a cocktail name" %>
      <%= c.submit "Go!", class: "btn btn-primary" %>
      <% end %>

    </div>
  </div>
</div>
